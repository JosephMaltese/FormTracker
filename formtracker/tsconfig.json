{
    "compilerOptions": {
      "jsx": "react-jsx", 
      "target": "ES6",
      "module": "ESNext",
      "jsxImportSource": "react", 
      "esModuleInterop": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["./*"]
      },
      "lib": ["DOM", "ESNext"]
    }
  }